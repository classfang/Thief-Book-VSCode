{
  "name": "easy-book",
  "displayName": "Easy-Book",
  "description": "Reading tool",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "txt",
    "book"
  ],
  "publisher": "Junki",
  "icon": "images/icon.png",
  "activationEvents": [
    "onCommand:extension.displayCode",
    "onCommand:extension.getPreviousPage",
    "onCommand:extension.getNextPage",
    "onCommand:extension.getJumpingPage"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Easy-Book",
      "type": "object",
      "properties": {
        "easyBook.currPageNumber": {
          "type": "number",
          "default": 1,
          "description": "Current Page Number"
        },
        "easyBook.pageSize": {
          "type": "number",
          "default": 50,
          "description": "Page Size"
        },
        "easyBook.isEnglish": {
          "type": "boolean",
          "default": false,
          "description": "Is it an English bookï¼Ÿ"
        },
        "easyBook.lineBreak": {
          "type": "string",
          "default": " ",
          "description": "Line Break Separation Symbol,Default a space"
        },
        "easyBook.filePath": {
          "type": "string",
          "default": "",
          "description": "Absolute Path of TXT Format Novels"
        }
      }
    },
    "commands": [
      {
        "command": "extension.displayCode",
        "title": "easy-book.DisplayCode"
      },
      {
        "command": "extension.getPreviousPage",
        "title": "easy-book.PreviousBook"
      },
      {
        "command": "extension.getNextPage",
        "title": "easy-book.NextBook"
      },
      {
        "command": "extension.getJumpingPage",
        "title": "easy-book.JumpingBook"
      }
    ],
    "keybindings": [
      {
        "command": "extension.getPreviousPage",
        "key": "ctrl+alt+,",
        "mac": "cmd+,",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.getNextPage",
        "key": "ctrl+alt+.",
        "mac": "cmd+.",
        "when": "editorTextFocus"
      },
      {
        "command": "extension.getJumpingPage",
        "key": "ctrl+alt+;",
        "mac": "cmd+;"
      },
      {
        "command": "extension.displayCode",
        "key": "ctrl+m",
        "mac": "cmd+m"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test",
    "package": "yarn run compile && vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.34"
  },
  "bugs": {
    "url": ""
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "homepage": ""
}
